{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "tsconfig",
		"rootDir": "src/",
		"outDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2018",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", "tmp"]
}
